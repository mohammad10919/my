<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1981EACC">

        <RelativeLayout
            android:id="@+id/picture_relative"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#F588FBFB"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/image_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="500dp"
                android:background="#00000000"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/me" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohammadreza Sabzikar"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/image_card"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/phone_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="#F0FFFFFF"
            android:layout_below="@id/picture_relative"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/left_picture"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/leftarrow"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:id="@+id/phone_picture"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/phone"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="370dp"/>
                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شماره تماس"
                    android:textSize="17sp"
                    android:layout_alignEnd="@id/phone_picture"
                    android:layout_marginEnd="40dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-black"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/name_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="#F0FFFFFF"
            android:layout_below="@id/phone_card"
            android:layout_marginTop="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/left_picture1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/leftarrow"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:id="@+id/nam_picture"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/name"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="370dp"/>
                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام کاربری"
                    android:textSize="17sp"
                    android:layout_alignEnd="@id/nam_picture"
                    android:layout_marginEnd="40dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-black"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/download_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="#F0FFFFFF"
            android:layout_below="@id/name_card"
            android:layout_marginTop="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/left_picture2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/leftarrow"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:id="@+id/download_picture"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/download"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="370dp"/>
                <TextView
                    android:id="@+id/download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="download"
                    android:textSize="17sp"
                    android:layout_alignEnd="@id/download_picture"
                    android:layout_marginEnd="40dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-black"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</FrameLayout>